{
  "compilerOptions": {
    "lib"                     : ["es2018"],
    "module"                  : "commonjs",
    "baseUrl"                 : "./src/",
    "target"                  : "esnext",
    "noImplicitAny"           : true,
    "sourceMap"               : true,
    "outDir"                  : "lib",
    "declaration"             : true,
    "emitDecoratorMetadata"   : true,
    "experimentalDecorators"  : true,
    "strictNullChecks"        : true,
    "typeRoots"               : ["node_modules/@types"],
    "paths": {
      "@mubble/core": [
        "../node_modules/@mubble-test/core"
      ],
      "@mubble/core/*": [
        "../node_modules/@mubble-test/core/*"
      ]
    }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "__tests__"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
